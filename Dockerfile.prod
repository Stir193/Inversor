# Web production Dockerfile - build Vite app and serve with nginx
FROM node:18-alpine as build
WORKDIR /app
COPY package.json package-lock.json* ./
RUN npm install
COPY . .
RUN npm run build

FROM nginx:stable-alpine
COPY --from=build /app/dist /usr/share/nginx/html
# nginx config will be provided by docker-compose volume (nginx/conf.d)
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
